<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tech.gigabyte.blobdatainsqlite.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="85dp"
            android:contentDescription="@string/userimage"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="30sp"
            android:background="@drawable/my_style"
            android:layout_marginBottom="11dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/employee_photo"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#395a62">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="150sp"
            android:layout_height="43dp"
            android:layout_marginStart="5sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/my_style"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="150sp"
            android:layout_height="43dp"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/my_style"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/age"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="150sp"
            android:layout_height="43dp"
            android:layout_below="@id/tv_age"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/my_style"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="@string/sex"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ev_name"
            android:layout_width="220dp"
            android:layout_height="43sp"
            android:layout_marginStart="5sp"
            android:layout_marginTop="30sp"
            android:layout_toEndOf="@id/tv_name"
            android:background="@drawable/my_style"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="@string/name"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/ev_age"
            android:layout_width="220dp"
            android:layout_height="43dp"
            android:layout_below="@id/ev_name"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/tv_age"
            android:background="@drawable/my_style"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="@string/age"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/ev_sex"
            android:layout_width="220dp"
            android:layout_height="43dp"
            android:layout_below="@id/tv_age"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/tv_sex"
            android:background="@drawable/my_style"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="@string/sex"
            android:textColor="#000000" />


    </RelativeLayout>

</RelativeLayout>
